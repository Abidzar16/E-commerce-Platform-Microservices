			"http-proxy-middleware": "^2.0.6",
			"cors": "^2.8.5",
			"helmet": "^7.0.0",
			"winston": "^3.9.0"
	},
	"devDependencies": {
			"@types/express": "^4.17.17",
			"@types/cors": "^2.8.13",
			"@types/jest": "^29.5.2",
			"@types/node": "^20.3.1",
			"@types/supertest": "^2.0.12",
			"typescript": "^5.1.3",
			"ts-node-dev": "^2.0.0",
			"jest": "^29.5.0",
			"ts-jest": "^29.1.0",
			"supertest": "^6.3.3"
	}
}