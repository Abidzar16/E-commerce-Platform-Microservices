{
	"name": "api-gateway",
	"version": "1.0.0",
	"description": "API Gateway for e-commerce microservices",
	"main": "dist/index.js",
	"engines": {
			"node": ">=14.18.0"
	},
	"scripts": {
			"start": "node dist/index.js",
			"dev": "ts-node-dev --respawn --transpile-only src/index.ts",
			"build": "tsc",
			"test": "jest",
			"test:watch": "jest --watch",
			"test:coverage": "jest --coverage"
	},
	"dependencies": {
